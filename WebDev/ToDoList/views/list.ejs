<%- include("header") -%>

<div class="box" id="heading">
        <h1>
                <%= ListTitle %>
        </h1>
</div>

<ul>
        <div class="box">
                <% for(var i=0; i< newListItemz.length ; i++ ){ %>
                        <div class="item">
                                <input type="checkbox">
                                <p>
                                        <%= newListItemz[i] %>
                                </p>
                        </div>
                
                <% }; %>
                
        </div>

</ul>


<form class="box item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <!-- A name:value pair is generated in the below line which is used to differentiate the calls also this value is space sensitive...-->
        <button type="submit" name="button" value=<%= ListTitle %> >+</button>
</form>

<%- include("footer") -%>